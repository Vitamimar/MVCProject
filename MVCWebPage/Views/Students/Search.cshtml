@model WebApplication2.Models.SearchResultModel

<h1>Pesquisa: @Model.SearchTerm</h1>

<div id="search_container">
    <div>
        <form asp-controller="Students" asp-action="Search" method="get">
            <input type="text" class="search_input" placeholder="Search" name="searchTerm">
            <button type="submit" id="search_button">Search</button>
        </form>
    </div>
    <button class="studentButtons" onclick="location.href='@Url.Action("Index")'">Return</button>
</div>

<div id="tableStudentIndex">
    <table class="table" id="tableStudents">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items[0].Age)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="table_button">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="table_button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a href="?page=@(Model.CurrentPage - 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm" class="page_button" id="previous_button">Previous</a>
    }

    @for (int i = 1; i <= Math.Ceiling((double)Model.TotalItems / Model.PageSize); i++)
    {
        if (i == Model.CurrentPage)
        {
            <a href="?page=@i&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm" class="current_page_button" id="currentPageButton">@i</a>
        }
        else
        {
            <a href="?page=@i&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm" class="page_button" id="pageButton-@i">@i</a>
        }
    }

    @if (Model.CurrentPage < Math.Ceiling((double)Model.TotalItems / Model.PageSize))
    {
        <a href="?page=@(Model.CurrentPage + 1)&pageSize=@Model.PageSize&searchTerm=@Model.SearchTerm" class="page_button" id="next_button">Next</a>
    }
</div>
